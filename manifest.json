{
  "manifest_version": 2,
  "name": "SAM - Steem Activity Monitor",
  "version": "1.0",
  "description": "Monitor Steem blockchain activity with real-time transaction charts",
  "permissions": [
    "storage",
    "https://steemd.steemworld.org/*"
  ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "128": "samLogo.png"
  }
}